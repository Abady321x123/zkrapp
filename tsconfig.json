{
	"compilerOptions": {
		"strict": true,
		"moduleResolution": "node",
		"module": "commonjs",
		"target": "es2018",
		"lib": [
			"esnext",
			"esnext.array",
			"esnext.asynciterable",
			"esnext.intl",
			"esnext.symbol"
		],
		"alwaysStrict": true,
		"declaration": false,
		"sourceMap": false,
		"inlineSourceMap": true,
		"inlineSources": true,
		"importHelpers": true,
		"noEmitHelpers": true,
		"removeComments": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"allowSyntheticDefaultImports": true,
		"pretty": true,
		"outDir": "dist",
		"sourceRoot": "./src/"
	}
}